.todos
  background-color #fff
  margin 1.4em auto 0.8em
  wrapper(18.5em, 0)
  box-shadow 2px 3px 10px $light-gray-2

  &__list
    padding-left 0
    list-style-type none
    margin 0

    &__item
      padding 0.82em 0.3em 0.82em 2.15em
      display flex
      justify-content space-between
      align-items flex-start
      position relative
      &:hover
        background-color $light-gray

      &:hover > &__delete
        transform scale(0.5)
      
      &__text
        color $blue-dark
        order 1
        flex 0 0 65%
        font-weight 600
        align-self center

      &__label
        border 0.3em solid $light-gray-2
        background-color white
        border-radius 50%
        cursor pointer
        width 0.85em
        height 0.8em
        right 1.6em
        top 0.9em
        position absolute
        transition all 200ms ease-in-out
        margin-right 0.5em
        transform-origin 50% 50% 0

        &:after
          background-image url(./../img/check-mark.svg)
          background-size cover
          content ""
          width 1em
          height 1em
          bottom -0.1em
          right -0.1em
          transform scale(0)
          transition all 200ms ease-in-out
          position absolute
          transform-origin 50% 50% 0

      &__checkbox
        order 2
        flex 0 0 15%
        visibility hidden
        z-index 2

        &:checked + .todos__list__item__label
          border 0.3em solid transparent
          background-color transparent

        &:checked + .todos__list__item__label:after
          transform scale(1)

        & ~ .todos__list__item__text
          color $blue-dark  

        &:checked ~ .todos__list__item__text
          color $blue-gray-light

      &__delete
        flex 0 0 15%
        border 1px solid transparent
        background-color transparent
        order 3
        transform scale(0)
        transition transform 200ms ease-in-out
        margin-left 1.1em
        cursor pointer
        outline none

        &__icon
          height 1.3em

      &__edit
        padding 0.95em 2.1em
        background-color $blue-dark

        &__form
          display flex
          justify-content space-around
          align-items center
          flex-wrap wrap
          margin-bottom 0

          &__input
            flex 0 0 100%
            font-size 0.8em
            border-width 0 0 1px 0
            border-bottom-style solid
            border-bottom-color $medium-gray
            color white
            outline none
            background-color $blue-dark