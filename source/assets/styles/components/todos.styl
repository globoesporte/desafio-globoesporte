.todos
  background-color #fff
  margin 0 auto
  wrapper(296px, 0)
  box-shadow 6px -2px 50px #c8cdd5
  margin-bottom 1em

  &__list
    padding-left 0
    list-style-type none
    margin 0

    &__item
      padding 0.78em 0.3em 0.78em 2.2em
      display flex
      justify-content space-between
      align-items center
      &:hover
        background-color $light-gray
      
      &__text
        color $blue-dark
        order 1
        flex 0 0 80%
        font-weight 600
        // line-height 1.1

      &__checkbox
        order 2
        flex 0 0 10%
        & + .todos__list__item__text
          color $blue-dark  
        &:checked + .todos__list__item__text
          color $blue-gray-light

      &__delete
        flex 0 0 10%
        border 1px solid $red 
        background-color transparent
        color $red
        order 3

