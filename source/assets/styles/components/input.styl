.new-todo-input
  display block
  margin 2.1em auto 0
  padding .5em 0.2em
  width 61%
  border-width 0 0 1px 0
  border-bottom-style solid
  border-bottom-color $medium-gray
  background-color $lighter-gray 
  color $blue-dark 
  font-weight 600
  letter-spacing -0.5
  outline none
  font-size ($text-size * 1.05)
  &::placeholder
    color $blue-dark 