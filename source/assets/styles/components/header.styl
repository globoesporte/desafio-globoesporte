.header
  background-color $green-2
  text-align center
  display flex
  justify-content center
  color white
  width 100%
  position relative

  &__title
    color $light-green
    margin 0.31em 0

  &__logo
    margin 1.49em 0
    transform scale(2.1)
    height 0.95em

  &__time
    background-color $green
    position absolute 
    right 0
    height 100%
    width 7.75em
    display flex
    justify-content center
    align-items center
    color $light-green

    &__day
      margin-top -0.1em

    &__more-info
      display flex
      flex-direction column
      justify-content flex-start
      align-items flex-start
      margin-left 0.4em
      margin-top -0.2em
      
      &__day-week
        margin-left -0.2em
        margin-bottom 0.1em
      
      &__month-year
        margin-top -0.3em
        